  },
  "devDependencies": {
    "@firebase/testing": "0.20.6",
    "eslint": "7.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "0.2.1",
    "mocha": "8.0.1"
  },
  "private": true
}
